<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head.ejs')%>
    <title>Feed</title>
</head>

<body id="index">
    <%- include('./partials/appNav.ejs') %>
    <main id="feed">
        <section class="text-gray-600 body-font overflow-hidden">
            <div class="container px-5 py-24 mx-auto">
                <div class="-my-8 divide-y-2 divide-gray-100">
                <% entries.forEach((entry) => { %>
                    <div class="py-8 flex flex-wrap md:flex-nowrap">
                    <div class="md:w-64 md:mb-0 mb-6 flex-shrink-0 flex flex-col">
                        <span class="font-semibold title-font text-gray-700">
                            <%= entry?.category %>
                        </span>
                        <span class="font-semibold title-font text-gray-700">
                            <%= entry.username %>
                        </span>
                        <span class="mt-1 text-gray-500 text-sm">
                            <%= entry.date.toDateString() %>
                        </span>
                        <span class="mt-1 flex max-w-min px-2 justify-center rounded-3xl border-2 border-gray-300 p-1 text-xl text-gray-500 hover:cursor-pointer hover:bg-gray-400 hover:text-white">
                          <form action="/cannanote/<%= entry._id %>/like?_method=PUT" method="POST">
                            <input type="number" value="1" hidden />
                            <button class="flex items-center" type="submit">
                              <%= entry.meta.favs%>
                              <svg fill="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="h-5 w-5 pl-1" viewBox="0 0 24 24">
                                <path d="M20.84 4.61a5.5 5.5 0 00-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 00-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 000-7.78z"></path> </svg>
                            </button>
                          </form>
                        </span>

                    </div>
                    <div class="md:flex-grow">
                        <h2 class="text-2xl font-medium text-gray-900 title-font mb-2">
                            <%= entry.strain %>
                        </h2>
                        <p class="leading-relaxed">
                            <%= entry.description%>
                        </p>
                        <a class="text-lime-500 inline-flex items-center mt-4" href="/cannanote/<%=entry._id%>">
                            Learn More
                        </a>
                    </div>
                    </div>
                <% })%>
                </div>
            </div>
        </section>
    </main>
</body>

</html>
