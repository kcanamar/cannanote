<!DOCTYPE html>
<html lang="en">
<head>
<%- include ('./partials/head.ejs') %>
    <title>Show Entry</title>
</head>
<body>
<%- include('./partials/appNav.ejs') %>


    <section class="body-font overflow-hidden bg-white text-gray-400">
      <div class="container mx-auto px-5 py-24">
        <div class="mx-auto flex flex-wrap md:w-4/5">
          <div class="mb-6 w-full lg:mb-0 lg:py-6 lg:pr-10">
            <h2 class="title-font text-sm tracking-widest text-gray-500">Brand Name</h2>
            <h1 class="title-font mb-4 text-3xl font-medium text-orange-500"><%= entry.strain %></h1>
            <h2 class="title-font mb-4 text-sm tracking-widest text-gray-500"><%= entry.username %></h2>

            <!-- This is the anchor tag for the information connected to the entry -->
            <div id="tabs" hx-get="/tab1" hx-trigger="load delay:100ms" hx-target="#tabs" hx-swap="innerHTML"></div>

            <!-- This will be the response to the endpoint `/tab1` -->
            <div class="tab-list mb-4 flex">
              <button hx-get="/:id/description" role="tab" aria-selected="true" class="selected flex-grow border-b-2 px-1 py-2 text-lg border-lime-500 " aria-controls="tab-content">Description</button>
              <button hx-get="/:id/relfection" role="tab" aria-selected="false" aria-controls="tab-content" class="flex-grow border-b-2 border-gray-800 px-1 py-2 text-lg">Reflection</button>
            </div>

            <div class="tab-content" id="tab-content" role="tabpanel">
              <p class="mb-4 leading-relaxed"><%= entry.description %></p>
              <div class="flex border-t border-gray-200 py-2">
                <span class="text-gray-500">Method</span>
                <span class="ml-auto text-gray-900"><%= entry.consumption %></span>
              </div>
              <div class="flex border-t border-gray-200 py-2">
                <span class="text-gray-500">Indica / Sativa</span>
                <span class="ml-auto text-gray-900"><%= entry.type %></span>
              </div>
              <div class="mb-6 flex border-b border-t border-gray-200 py-2">
                <span class="text-gray-500">Amount Consumed</span>
                <span class="ml-auto text-gray-900"><%= entry.amount %></span>
              </div>

              <!-- Add more information upfront such as cannabinoid/terpene profile  -->
            </div>
            <div class="flex">

              
            <!-- TODO: The UD functionality will be moved to show, use htmx to render edit view on this note -->
