                    <!-- <span class="extra1"> -->
                        <!-- <label for="edit"> -->
                            <!-- <a href="/cannanote/<%#=entry._id%>/edit" class="waves-effect waves-light btn edit #ff5252 red accent-2" id="<%#= entry.username !== currentUser ? " hidden" : null%>"> -->
                                <!-- Edit -->
                            <!-- </a> -->
                        <!-- </label> -->
                    <!-- </span> -->
                    <!-- <span class="extra2 valign-wrapper"> -->
                        <!-- <form action="/cannanote/<%#=entry._id%>?_method=DELETE" method="POST" id="<%#= entry.username !== currentUser ? " hidden" : null%>"> -->
                            <!-- <label for="delete"><input class="waves-effect waves-light btn #b388ff deep-purple accent-1" type="submit" value="Delete"> -->
                            <!-- </label> -->
                        <!-- </form> -->
              <form action="/cannanote/<%= entry._id%>/like?_method=PUT" method="POST">
                  <input type="hidden" name="favs" value="1">
                  <button type="submit" class="ml-auto inline-flex h-10 w-10 items-center justify-center rounded-full border-0 bg-gray-200 p-0 text-gray-500 focus:bg-red-500 focus:text-white">
                    <svg fill="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="h-5 w-5" viewBox="0 0 24 24">
                      <path d="M20.84 4.61a5.5 5.5 0 00-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 00-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 000-7.78z"></path>
                    </svg>
                  </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </section>
</body>
</html>
